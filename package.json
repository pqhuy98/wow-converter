{
  "name": "wow-converter",
  "version": "1.1.0",
  "description": "",
  "author": "Huy Pham",
  "license": "MIT",
  "type": "module",
  "pkg": {
    "assets": [
      "webui/out/**"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "dev": "tsx watch src/server/index.ts",
    "start": "node build/src/server/index.js",
    "prisma:generate": "prisma generate",
    "build:webui": "cd webui && npm run build",
    "build:0": "shx rm -rf build && tsc && tsc-alias",
    "build:1": "rollup -c",
    "build:2": "shx rm -rf dist && pkg build/server.bundle.js --config package.json --compress Gzip --options max-old-space-size=99999",
    "build:3": "cross-env mkdir dist/webui && shx cp -r webui/out dist/webui && shx cp -r bin dist/bin",
    "build:app": "npm run prisma:generate && npm run build:0 && npm run build:1 && npm run build:2 && npm run build:3",
    "build:server": "npm run prisma:generate && npm run build:webui && npm run build:0",
    "build:wow.export": "cd wow.export && npm run build && cd .. && shx cp -r wow.export/bin/win-x64/* dist && shx rm dist/update dist/update.json",
    "build": "npm run build:webui && npm run build:app && npm run build:wow.export && npm run zip",
    "zip": "powershell -Command \"Compress-Archive -Path dist\\* -DestinationPath wow-converter.zip -Force\""
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@stylistic/eslint-plugin-ts": "^2.8.0",
    "@types/archiver": "^6.0.3",
    "@types/assert": "^1.5.11",
    "@types/chalk": "^2.2.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/fs-extra": "^11.0.4",
    "@types/gl": "^6.0.5",
    "@types/glob": "^8.1.0",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "airbnb-base": "^1.0.4",
    "audit": "^0.0.6",
    "cross-env": "^7.0.3",
    "es-main": "^1.3.0",
    "esbuild": "^0.25.7",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "npm": "^11.4.2",
    "pkg": "^5.8.1",
    "prisma": "^6.11.1",
    "rollup": "^4.45.1",
    "shx": "^0.4.0",
    "tsc-alias": "^1.8.16"
  },
  "dependencies": {
    "@pqhuy98/mdx-m3-viewer": "^5.12.2",
    "@prisma/client": "^6.12.0",
    "archiver": "^7.0.1",
    "assert": "^2.1.0",
    "chalk": "^4.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "ieee754": "^1.2.1",
    "image-q": "^4.0.0",
    "intn": "^1.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "minimist": "^1.2.8",
    "open": "^10.2.0",
    "pngjs": "^7.0.0",
    "round-to": "^6.0.0",
    "typescript": "^5.8.3",
    "war3-model": "^4.0.0",
    "zod": "^4.0.5"
  }
}
