{
  "name": "@pqhuy98/wow-converter",
  "version": "1.1.0",
  "description": "",
  "author": "Huy Pham",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "dev": "run-p dev:server dev:webui",
    "dev:server": "bun --watch src/server/index.ts",
    "dev:webui": "cd webui && bun run dev",
    "start": "set NODE_ENV=production && bun src/server/index.ts",
    "test": "bun tests/index.ts",
    "prisma:pull": "prisma db pull",
    "prisma:generate": "prisma generate",
    "clean": "shx rm -rf build dist wow-converter.zip && shx mkdir -p build dist",
    "install:webui": "cd webui && bun install",
    "postinstall": "run-p install:webui",
    "build:webui": "cd webui && bun run build",
    "build:bun": "bun build --compile src/server/index.ts --outfile ./dist/wow-converter.exe --external sharp --windows-title \"wow-converter\" --windows-publisher \"Huy\" --env=disable",
    "build:copy": "shx rm -rf dist/webui dist/bin dist/node_modules && cross-env mkdir dist/webui && shx cp -r webui/out dist/webui && shx cp -r bin dist/bin && npm i --omit=dev --prefix dist --no-audit --no-fund --include=optional sharp@^0.34.4",
    "build:wow.export": "cd wow.export && bun run build && cd .. && shx cp -r wow.export/bin/win-x64/. dist && shx rm -f dist/update dist/update.json",
    "zip": "powershell -Command \"Compress-Archive -Path dist\\* -DestinationPath wow-converter.zip -Force\"",
    "build:app": "run-p build:webui build:wow.export build:bun && run-s build:copy zip",
    "build:server": "bun run clean && run-p build:webui",
    "build": "bun run clean && bun run build:app"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin-ts": "^2.13.0",
    "@types/archiver": "^6.0.3",
    "@types/assert": "^1.5.11",
    "@types/chalk": "^2.2.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-http-proxy": "^1.6.7",
    "@types/fs-extra": "^11.0.4",
    "@types/glob": "^8.1.0",
    "@types/http-proxy": "^1.17.16",
    "@types/lodash": "^4.17.20",
    "@types/node": "^22.18.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "cross-env": "^7.0.3",
    "es-main": "^1.4.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.10.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^3.2.0",
    "express-http-proxy": "^2.1.2",
    "http-proxy": "^1.18.1",
    "npm": "^11.6.1",
    "npm-run-all": "^4.1.5",
    "prisma": "^6.16.3",
    "shx": "^0.4.0",
    "tsc-alias": "^1.8.16"
  },
  "dependencies": {
    "@pqhuy98/mdx-m3-viewer": "^5.13.1",
    "@prisma/client": "^6.16.3",
    "archiver": "^7.0.1",
    "assert": "^2.1.0",
    "axios": "^1.12.2",
    "chalk": "^4.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.2",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "ieee754": "^1.2.1",
    "image-q": "^4.0.0",
    "intn": "^1.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^11.2.2",
    "round-to": "^6.0.0",
    "sharp": "^0.34.4",
    "typescript": "^5.9.3",
    "war3-model": "^4.0.0",
    "zod": "^4.1.11"
  }
}
