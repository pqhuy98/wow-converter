{
  "name": "@pqhuy98/wow-converter",
  "version": "1.1.0",
  "description": "",
  "author": "Huy Pham",
  "license": "MIT",
  "type": "module",
  "pkg": {
    "assets": [
      "webui/out/**",
      "node_modules/sharp/build/Release/sharp.node",
      "node_modules/sharp/vendor/**",
      "build/**.cjs"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  },
  "exports": {
    "./*": "./src/*"
  },
  "scripts": {
    "lint": "eslint src/**/*.ts --fix",
    "dev": "run-p dev:server dev:webui",
    "dev:server": "tsx watch src/server/index.ts",
    "dev:webui": "cd webui && npm run dev",
    "start": "set NODE_ENV=production && node build/server.bundle.cjs",
    "test": "tsx tests/index.ts",
    "prisma:generate": "prisma generate",
    "clean": "shx rm -rf build dist wow-converter.zip && shx mkdir -p build dist",
    "build:webui": "cd webui && npm run build",
    "build:rollup": "npm run prisma:generate && rollup -c",
    "build:pkg": "pkg build/server.bundle.cjs --config package.json --compress Gzip --options max-old-space-size=99999 --output dist/wow-converter",
    "build:copy": "shx rm -rf dist/webui dist/bin dist/node_modules && cross-env mkdir dist/webui && shx cp -r webui/out dist/webui && shx cp -r bin dist/bin && shx cp -r build/**.worker.cjs dist && npm i --omit=dev --prefix dist --no-audit --no-fund sharp@0.32.6",
    "build:wow.export": "cd wow.export && npm run build && cd .. && shx cp -r wow.export/bin/win-x64/. dist && shx rm -f dist/update dist/update.json",
    "zip": "powershell -Command \"Compress-Archive -Path dist\\* -DestinationPath wow-converter.zip -Force\"",
    "build:app": "run-p build:rollup build:webui build:wow.export && run-s build:pkg build:copy zip",
    "build:server": "npm run clean && run-p build:webui build:rollup",
    "build": "npm run clean && npm run build:app"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@stylistic/eslint-plugin-ts": "^2.8.0",
    "@types/archiver": "^6.0.3",
    "@types/assert": "^1.5.11",
    "@types/chalk": "^2.2.4",
    "@types/compression": "^1.8.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/express-http-proxy": "^1.6.7",
    "@types/fs-extra": "^11.0.4",
    "@types/gl": "^6.0.5",
    "@types/glob": "^8.1.0",
    "@types/http-proxy": "^1.17.16",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^7.12.0",
    "@typescript-eslint/parser": "^7.12.0",
    "audit": "^0.0.6",
    "cross-env": "^7.0.3",
    "es-main": "^1.3.0",
    "esbuild": "^0.25.7",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-simple-import-sort": "^12.1.0",
    "eslint-plugin-unused-imports": "^3.2.0",
    "express-http-proxy": "^2.1.1",
    "http-proxy": "^1.18.1",
    "npm": "^11.4.2",
    "npm-run-all": "^4.1.5",
    "pkg": "^5.8.1",
    "prisma": "^6.11.1",
    "rollup": "^4.45.1",
    "shx": "^0.4.0",
    "tsc-alias": "^1.8.16",
    "tslib": "^2.8.1",
    "tsx": "^4.20.5"
  },
  "dependencies": {
    "@pqhuy98/mdx-m3-viewer": "^5.12.2",
    "@prisma/client": "^6.12.0",
    "archiver": "^7.0.1",
    "assert": "^2.1.0",
    "chalk": "^4.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.1",
    "express": "^5.1.0",
    "fs": "^0.0.1-security",
    "fs-extra": "^11.3.0",
    "glob": "^11.0.3",
    "helmet": "^8.1.0",
    "ieee754": "^1.2.1",
    "image-q": "^4.0.0",
    "intn": "^1.0.0",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "open": "^10.2.0",
    "pngjs": "^7.0.0",
    "rolldown": "^1.0.0-beta.34",
    "round-to": "^6.0.0",
    "sharp": "0.32.6",
    "typescript": "^5.8.3",
    "war3-model": "^4.0.0",
    "zod": "^4.0.5"
  }
}
