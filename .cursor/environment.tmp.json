{
  "container": {
    "build": {
      "dockerfile": ".cursor/Dockerfile",
      "context": "."
    },
    "agentCanUpdateSnapshot": true
  },
  "install": "npm ci && git clone https://github.com/pqhuy98/wow.export && cd wow.export && npm ci && nvm use 14 && node build linux-x64-debug && nvm use 22",
  "start": "",
  "terminals": [
    {
      "name": "wow.export",
      "command": "xvfb-run ./bin/linux-x64-debug/wow.export",
      "description": "Run wow.export headless (RCP on 17751)."
    },
    {
      "name": "wow.export logs",
      "command": "bash -lc 'mkdir -p /tmp/wow.profile/Default; touch /tmp/wow.profile/Default/runtime.log; tail -n 0 -F /tmp/wow.profile/Default/runtime.log'",
      "description": "Tail wow.export runtime.log for visibility."
    },
    {
      "name": "wow-converter dev",
      "command": "bash -lc 'PORT=3001 NODE_ENV=development npm run dev'",
      "description": "Run server + web UI dev."
    }
  ],
  "ports": [
    { "name": "wow-converter", "port": 3001 },
    { "name": "wow.export-rcp", "port": 17751 }
  ]
}
